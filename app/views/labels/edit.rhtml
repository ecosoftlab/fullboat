<h1>Editing Label '<%= @label%>'</h1>

<% remote_form_for(:label, :url => label_path(@label), :html => { :method => :put }) do |f| %>
	<fieldset id="label_details" name="Label Details" class="clearfix">
		<%= render(:partial => "labels/form", :locals => {:f => f})%>
    	<%= submit_tag "Update" %>
	</fieldset>
<% end %>

<%= link_to 'Show', label_path(@label) %> |
<%= link_to 'Back', labels_path %>