<% content_for :record do %>
  <p><%= link_to("Back to '#{@role}'", role_path(@role)) %></p>
<% end %>

<h1>Editing Role '<%= h @role %>'</h1>

<% remote_form_for(:role, :url => role_path(@role), :html => { :method => :put }) do |f| %>
	<%= render(:partial => "roles/form", :locals => {:f => f})%>
  <%= submit_tag "Update" %>
<% end %>