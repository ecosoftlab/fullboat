<% content_for :record do %>
  <% if current_user == @user %>
    <ul>
      <li><%= link_to("Edit '#{h(@user)}'", edit_user_path(@user)) %></li>
    </ul>
  <% end %>
<% end %>
<%= image_tag(@user.avatar.url(:large), :size => '230x230', :class => 'right') %>

<h1><%= h @user %></h1>

<h2>Roles / Permissions</h2>