<% content_for :record do %>
  <p><%= link_to("Back to '#{@user}'", label_path(@user)) %></p>
<% end %>

<h1>Editing User '<%= h @user %>'</h1>

<% remote_form_for(:user, :url => user_path(@user), :html => { :multipart => true, :method => :put }) do |f| -%>
	<%= render(:partial => 'staph/users/form', :locals => {:f => f})%>
	<%= submit_tag 'Update' %>
<% end -%>
