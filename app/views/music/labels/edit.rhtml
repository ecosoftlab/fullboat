<% content_for :record do %>
  <p><%= link_to("Back to '#{@label}'", label_path(@label)) %></p>
<% end %>

<h1>Editing Label '<%= h @label %>'</h1>

<% remote_form_for(:label, :url => label_path(@label), :html => { :method => :put }) do |f| %>
	<%= render(:partial => "music/labels/form", :locals => {:f => f})%>
  <%= submit_tag "Update" %>
<% end %>