<h1>Listing Schedules</h1>

<table>
	<thead>
  	<tr>
  		<th>Name</th>
  		<th>Description</th>
  		<th>Starts at</th>
  		<th>Ends at</th>
  		<th colspan="3"></th>
  	</tr>
	</thead>
	
	<tbody>
  	<% @schedules.each do |schedule| %>
  		<tr>
		    <td><strong><%= h schedule %></strong></td>
		    <td><%= truncate(h(schedule.description_source), 200) %></td>
		    <td><%= h schedule.starts_at %></td>
		    <td><%= h schedule.ends_at %></td>
		    <td><%= link_to 'Show', schedule_path(schedule) %></td>
    	  <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    	  <td><%= link_to_remote 'Destroy', 
								:url => schedule_path(schedule), 
								:confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
	<% end %>
	</tbody>
</table>