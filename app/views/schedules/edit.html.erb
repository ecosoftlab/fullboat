<h1>Editing Schedule '<%= @schedule%>'</h1>

<% remote_form_for(:schedule, :url => schedule_path(@schedule), :html => { :method => :put }) do |f| %>
	<fieldset id="schedule_details" name="Schedule Details" class="clearfix">
		<%= render(:partial => "schedules/form", :locals => {:f => f})%>
    	<%= submit_tag "Update" %>
	</fieldset>
<% end %>

<%= link_to 'Show', schedule_path(@schedule) %> |
<%= link_to 'Back', schedules_path %>