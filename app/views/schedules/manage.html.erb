<h1>Manage Schedules</h1>

<table>
	<thead>
  	<tr>
    	<th>Name</th>
    	<th>Description</th>
    	<th>Starts at</th>
    	<th>Ends at</th>
		<th colspan="3"></th>
  	</tr>
	</thead>
  
	<tbody>
<% @schedules.each do |schedule| %>
	<tr id="<%= schedule.dom_id %>" class="<%= cycle(nil, 'stripe')%>">
		<td><%= h schedule.name %></td>
		<td><%= h schedule.description %></td>
		<td><%= h schedule.starts_at %></td>
		<td><%= h schedule.ends_at %></td>
    	<td><%= link_to 'Show', schedule_path(schedule) %></td>
    	<td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    	<td><%= link_to_remote 'Destroy', 
								:url => schedule_path(schedule), 
								:confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	</tbody>
<% end %>
</table>