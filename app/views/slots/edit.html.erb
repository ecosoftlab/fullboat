<h1>Editing Slot '<%= @slot %>'</h1>

<% remote_form_for(:slot, :url => schedule_slot_path(@slot.schedule, @slot), :html => { :method => :put }) do |f| %>
	<fieldset id="slot_details" name="Slot Details" class="clearfix">
		<%= render(:partial => "slots/form", :locals => {:f => f})%>
    	<%= submit_tag "Update" %>
	</fieldset>
<% end %>