<h1>Manage Slots</h1>

<table>
	<thead>
  	<tr>
    	<th>Schedule</th>
    	<th>Schedulable</th>
    	<th>Day</th>
    	<th>Start time</th>
    	<th>End time</th>
		<th colspan="3"></th>
  	</tr>
	</thead>
  
	<tbody>
<% @slots.each do |slot| %>
	<tr id="<%= slot.dom_id %>" class="<%= cycle(nil, 'stripe')%>">
		<td><%= h slot.schedule_id %></td>
		<td><%= h slot.schedulable_id %></td>
		<td><%= h slot.day %></td>
		<td><%= h slot.start_time %></td>
		<td><%= h slot.end_time %></td>
    	<td><%= link_to 'Show', slot_path(slot) %></td>
    	<td><%= link_to 'Edit', edit_slot_path(slot) %></td>
    	<td><%= link_to_remote 'Destroy', 
								:url => slot_path(slot), 
								:confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	</tbody>
<% end %>
</table>