<div id="error" class="alert error" style="display:none;"></div>

<!--[form:slot]-->
<fieldset id="slot_details" class="clearfix">
	<legend>Slot Details</legend>
	<ol>
	
		<li>
	    	<label for="schedule_id">Schedule</label>
	    	<%= f.text_field :schedule_id %>
		</li>
	
		<li>
	    	<label for="schedulable_id">Schedulable</label>
	    	<%= f.text_field :schedulable_id %>
		</li>
	
		<li>
	    	<label for="day">Day</label>
	    	<%= f.select :day, [["Sunday", 0], ["Monday", 1], ["Tuesday", 2], ["Wednesday", 3],
	    	                    ["Thursday", 4], ["Friday", 5], ["Saturday", 6]] %>
		</li>
	
		<li>
	    	<label for="start_time">Start hour</label>
	    	<%= f.time_select :start_time, {:minute_step => 15} %>
		</li>
	
		<li>
	    	<label for="end_time">End hour</label>
	    	<%= f.time_select :end_time, {:minute_step => 15} %>
		</li>
	
	</ol>
</fieldset>
