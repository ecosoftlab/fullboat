<h1>Editing Comment '<%= @comment%>'</h1>

<% remote_form_for(:comment, :url => comment_path(@comment), :html => { :method => :put }) do |f| %>
	<fieldset id="comment_details" name="Comment Details" class="clearfix">
		<%= render(:partial => "comments/form", :locals => {:f => f})%>
    	<%= submit_tag "Update" %>
	</fieldset>
<% end %>

<%= link_to 'Show', comment_path(@comment) %> |
<%= link_to 'Back', comments_path %>