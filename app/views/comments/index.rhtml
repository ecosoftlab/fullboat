<h1>Listing Comments</h1>

<table>
	<thead>
	<tr>
	    	<th>User</th>
	    	<th>Album</th>
	    	<th>Body</th>
	  	</tr>
	</thead>
	
	<tbody>
  	<% @comments.each do |comment| %>
  		<tr>
		    		<td><%=h comment.user_id %></td>
		    		<td><%=h comment.album_id %></td>
		    		<td><%=h comment.body %></td>
		  		</tr>
	<% end %>
	</tbody>
</table>