<h1>Listing Programs</h1>

<label>Active Schedule</label>
<%= select_tag :active, options_from_collection_for_select(Schedule.find(:all), :id, :to_s) %>
<hr class="space"/>

<table>
	<thead>
	<tr>
	    	<th>Name</th>
	    	<th>Description</th>
	    	<th>Type</th>
	    	<th>URL</th>
	    	<th colspan="3"></th>
	  	</tr>
	</thead>
	
	<tbody>
  	<% @programs.each do |program| %>
  		<tr>
		  	<td><strong><%=h program.name %></strong></td>
		  	<td><%= truncate(h(program.description_source), 200) %></td>
		  	<td><%=h program.type %></td>
		  	<td><%=h program.url %></td>
    	  <td><%= link_to 'Show', program_path(program) %></td>
    	  <td><%= link_to 'Edit', edit_program_path(program) %></td>
    	  <td><%= link_to_remote 'Destroy', 
								:url => program_path(program), 
								:confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
	<% end %>
	</tbody>
</table>