<% content_for :record do %>
  <p><%= link_to("Back to '#{@program}'", label_path(@program)) %></p>
<% end %>

<h1>Editing Program '<%= @program%>'</h1>

<% remote_form_for(:program, :url => program_path(@program), :html => { :method => :put }) do |f| %>
	<fieldset id="program_details" name="Program Details" class="clearfix">
		<%= render(:partial => "programs/form", :locals => {:f => f})%>
    	<%= submit_tag "Update" %>
	</fieldset>
<% end %>