<h1>Create a New Playlist</h1>

<% remote_form_for(:playlist, :url => playlists_path) do |f| %>
	<fieldset id="playlist_details" name="Playlist Details" class="clearfix">
		<%= render(:partial => "playlists/form", :locals => {:f => f})%>
    	<%= submit_tag "Create" %>
	</fieldset>
<% end %>

<%= link_to 'Back', playlists_path %>