<% content_for :record do %>
  <ul>
    <li><%= link_to("Back to '#{@event}'", event_path(@event)) %></li>
  </ul>
<% end %>

<h1>Editing Event '<%= h @event %>'</h1>

<% remote_form_for(:event, :url => event_path(@event), :html => { :method => :put }) do |f| %>
	<%= render(:partial => "calendar/events/form", :locals => {:f => f})%>
  <%= submit_tag "Update" %>
<% end %>