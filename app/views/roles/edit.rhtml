<h1>Editing Role '<%= @role%>'</h1>

<% remote_form_for(:role, :url => role_path(@role), :html => { :method => :put }) do |f| %>
	<fieldset id="role_details" name="Role Details" class="clearfix">
		<%= render(:partial => "roles/form", :locals => {:f => f})%>
    	<%= submit_tag "Update" %>
	</fieldset>
<% end %>

<%= link_to 'Show', role_path(@role) %> |
<%= link_to 'Back', roles_path %>