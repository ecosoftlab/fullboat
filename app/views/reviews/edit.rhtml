<% content_for :record do %>
  <p><%= link_to("Back to '#{@review}'", review_path(@review)) %></p>
<% end %>

<h1>Editing Review '<%= h @review%>'</h1>

<% remote_form_for(:review, :url => review_path(@review), :html => { :method => :put }) do |f| %>
  <%= render(:partial => "reviews/form", :locals => {:f => f})%>
  <%= submit_tag "Update" %>
<% end %>