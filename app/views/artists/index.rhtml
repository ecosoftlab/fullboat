<h1>Listing Artists</h1>

<table>
	<thead>
	<tr>
	    	<th>Name</th>
	    	<th>Sort name</th>
	    	<th>Note</th>
	  	</tr>
	</thead>
	
	<tbody>
  	<% @artists.each do |artist| %>
  		<tr>
		    		<td><%=h artist.name %></td>
		    		<td><%=h artist.sort_name %></td>
		    		<td><%=h artist.note %></td>
		  		</tr>
	<% end %>
	</tbody>
</table>