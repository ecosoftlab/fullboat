	<legend>Promo Details</legend>
	<ol>
	
		<li>
	    	<label for="name">Name</label>
	    	<%= f.text_field :name, :class => 'title' %>
		</li>
		<li>
	    	<label for="code">Code</label>
	    	<%= f.text_field :code, :class => 'title' %>
