<h1>Staph</h1>

<%= will_paginate @users %>

<table>
	<thead>
  	<tr>
		<th>Name</th>
		<th>Title</th>
		<th>E-mail</th>
		<th colspan="4"></th>
  	</tr>
	</thead>
  
	<tbody class="directory">
<% @users.each do |user| %>
	<tr id="<%= user.dom_id %>" class="<%= cycle(nil, 'stripe')%>">
		<td><strong><%= h user %></strong></td>
		<td><!-- TODO --></td>
		<td><%= mail_to(user.email, user.email, :encode => :javascript) %></td>
		<td class="hide"><%= hcard(user) %></td>
		<td><%= link_to("Show", user_path(user)) %></td>
		<td colspan="2"></td>
	</tr>
	</tbody>
<% end %>
</table>

<%= will_paginate @users %>