<div id="error" class="alert error" style="display:none;"></div>

<!--[form:program]-->
<fieldset id="program_details" class="clearfix">
	<legend>Program Details</legend>
	<ol>
		<li>
	    	<label for="name">Name</label>
	    	<%= f.text_field :name, :class => 'title' %>
		</li>
		<li>
		    <label>Owner</label>
		    <%= select_tag :users, options_for_select(User.find(:all).collect{|u| [u.to_s, u.id]}, (@program.users.collect{|u| u.id} rescue nil)), :multiple => true %>
		<li>
	    	<label for="description">Description</label>
	    	<%= f.text_area :description %>
		</li>
		<li>
	    	<label for="type">Type</label>
	    	<%= f.select :type, subclasses_of(Program).collect{|sc| [sc.to_s.titleize, sc.to_s]} %>
		</li>
		<li>
	    	<label for="url">URL</label>
	    	<%= f.text_field :url %>
		</li>
	</ol>
</fieldset>
