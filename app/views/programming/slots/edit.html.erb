<% content_for :record do %>
  <ul>
    <li><%= link_to("Back to '#{@slot}'", schedule_slot_path(@slot.schedule, @slot)) %></li>
  </ul>
<% end %>

<h1>Editing Slot '<%= h @slot %>'</h1>

<% remote_form_for(:slot, :url => schedule_slot_path(@slot.schedule, @slot), :html => { :method => :put }) do |f| %>
	<%= render(:partial => "programming/slots/form", :locals => {:f => f})%>
  <%= submit_tag "Update" %>
<% end %>