<% content_for :record do %>
  <p><%= link_to("Back to '#{@psa}'", label_path(@psa)) %></p>
<% end %>

<h1>Editing PSA '<%= h @psa %>'</h1>

<% remote_form_for(:psa, :url => psa_path(@psa), :html => { :method => :put }) do |f| %>
	<%= render(:partial => "psa/form", :locals => {:f => f})%>
  <%= submit_tag "Update" %>
<% end %>