<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<title><%= dynamic_page_title(@page_title) %></title>
	<%= yield :head %>
	<%= stylesheet_link_tag 'screen' %>
	<%= javascript_include_tag :defaults %>
</head>

<% content_tag :body, (@options_for_body_tag || {:id => 'standard'}) do %>
	<div id="container" class="span-23 prepend-1">
		<div id="header" class="clear">
		  <ul class="navigation" id="primary">
		    <li><%= link_to_unless_current("Directory", users_path )%></li>
		    <li>Calendar</li>
		    <li><%= link_to_unless_current("Create a Playlist", new_playlist_path) %></li>
		  </ul>
		  
		  <ul class="navigation" id="secondary">
		    <li><%= link_to_unless_current "Music",       music_path %></li>
		    <li><%= link_to_unless_current "Production",  production_path %></li>
		    <li><%= link_to_unless_current "Exec",        exec_path %></li>
		  </ul>
		  <div id="profile-box">
		    <p>Logged in as <%= h current_user %></p>
		  </div>
		</div>

	  <div id="content" class="column span-17 colborder">
		  <%= yield %>
		</div>
		
		<div class="navigation column span-5 last" id="sidebar">
		  <div>
		  <%= (record  = yield :record)  ? record  : render(:partial => 'sidebar') rescue nil %>
		  <%= (section = yield :section) ? section : render(:partial => 'shared/sidebar') %>
		  </div>
		</div>
		
		<div id="footer" class="clear break">
			<p>&copy; 2007 WRCT</p>
		</div>
	</div>
<% end %>
</html>
