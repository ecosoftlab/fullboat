<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<title><%= dynamic_page_title(@page_title) %></title>
	<%= yield :head %>
	<%= stylesheet_link_tag 'screen' %>
	<%= javascript_include_tag :defaults, 'reflection' %>
</head>

<% content_tag :body, (@options_for_body_tag || {:id => 'standard'}) do %>
	<div id="container" class="span-23 prepend-1">
		<div id="header" class="clear">
		  <%= render(:partial => 'shared/header') %>
		</div>

	  <div id="content" class="column span-17 colborder">
	    <% if flash[:notice] %>
	      <div id="error" class="alert notice">
	       <%= flash[:notice]%>
	      </div>
	    <% end %>
	    
		  <%= yield %>
		</div>
		
		<div class="column span-5 last" id="sidebar">
		  <% if current_user %>
      <div class="profile-box" id="secondary">
        <p>Logged in as: <%= link_to(h(current_user), user_path(current_user)) %></p>
      </div>
      <% end %>
      
		  <div>
		  <%= render(:partial => 'sidebar') rescue nil %>
		  <%= yield :record %>
		  <%= (section = yield :section) ? section : render(:partial => 'shared/sidebar') %>
		  </div>
		</div>
		
		<div id="footer" class="clear break">
		  <%= render(:partial => 'shared/footer') %>
		</div>
	</div>
<% end %>
</html>
